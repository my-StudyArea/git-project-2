<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.project2.controller.CustomerViewController">
   <children>
      <VBox layoutX="37.0" layoutY="25.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <Button fx:id="btnNewCustomer" mnemonicParsing="false" onAction="#btnNewCustomerOnAction" prefHeight="24.0" prefWidth="148.0" text="+ NEW CUSTOMER" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="15.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="77.0" text="Id : " />
                  <TextField fx:id="txtId" editable="false" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="49.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="77.0" text="Name : " />
                  <TextField fx:id="txtName" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="83.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="77.0" text="Address : " />
                  <TextField fx:id="txtAddress" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="117.0" spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="66.0" />
                  <Button fx:id="btnSave" defaultButton="true" minWidth="80.0" mnemonicParsing="false" onAction="#btnSaveOnAction" text="SAVE" />
                  <Button fx:id="btnDelete" layoutX="87.0" layoutY="10.0" minWidth="80.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="DELETE" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="151.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="tblCustomer" onKeyReleased="#tblCustomerOnKeyReleased" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="109.0" text="ID" />
                      <TableColumn prefWidth="260.0" text="NAME" />
                        <TableColumn prefWidth="220.0" text="ADDRESS" />
                    </columns>
                  </TableView>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
